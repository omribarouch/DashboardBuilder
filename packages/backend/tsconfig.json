      "baseUrl": "./src",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "paths": {
        "*": ["*", "src/*"]
      }
    },
    "include": [
      "packages/src/**/*.ts"
    ],
    "exclude": [
      "../../node_modules"
    ]
  }